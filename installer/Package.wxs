<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <Package Name="ColorTail"
           Manufacturer="Horizon IP Networks"
           Version="1.0.0"
           UpgradeCode="A3E7F1B2-4C5D-4A8E-9B1F-6D2C3E4F5A7B">

    <MajorUpgrade DowngradeErrorMessage="A newer version of ColorTail is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <StandardDirectory Id="ProgramFiles64Folder">
      <Directory Id="INSTALLFOLDER" Name="ColorTail">
        <Component Id="MainExecutable" Guid="B4F8E2C3-5D6A-4B9F-A2E1-7F3D4C5B6A8E">
          <File Id="ColorTailExe" Source="..\build\ColorTail.exe" KeyPath="yes" />
        </Component>
      </Directory>
    </StandardDirectory>

    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Id="ProgramMenuDir" Name="ColorTail">
        <Component Id="StartMenuShortcut" Guid="C5A9D3E4-6F7B-4C0A-B3F2-8A4E5D6C7B9F">
          <Shortcut Id="ColorTailShortcut"
                    Name="ColorTail"
                    Target="[INSTALLFOLDER]ColorTail.exe"
                    WorkingDirectory="INSTALLFOLDER" />
          <RemoveFolder Id="RemoveProgramMenuDir" On="uninstall" />
          <RegistryValue Root="HKCU" Key="Software\ColorTail" Name="StartMenu" Type="integer" Value="1" KeyPath="yes" />
        </Component>
      </Directory>
    </StandardDirectory>

    <Feature Id="Complete" Level="1">
      <ComponentRef Id="MainExecutable" />
      <ComponentRef Id="StartMenuShortcut" />
    </Feature>

    <!-- Add install directory to PATH -->
    <Component Id="PathEnv" Directory="INSTALLFOLDER" Guid="D6BA0E5F-7A8C-4D1B-C4A3-9B5F6E7D8C0A">
      <Environment Id="PATH" Name="PATH" Value="[INSTALLFOLDER]" Permanent="no" Part="last" Action="set" System="yes" />
    </Component>

    <Feature Id="AddToPath" Title="Add to PATH" Level="1">
      <ComponentRef Id="PathEnv" />
    </Feature>

  </Package>

</Wix>
